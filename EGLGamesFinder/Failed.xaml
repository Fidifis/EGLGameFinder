<Page x:Class="EGLGamesFinder.Failed"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EGLGamesFinder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Failed" Loaded="Page_Loaded">

    <Grid Background="White">
        <Label Content="Operation failed" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="ErrorMessage" Margin="39,73,38,60" TextWrapping="Wrap" Text="Error" IsReadOnly="True" AcceptsReturn="True"/>
        <Button Content="Back" HorizontalAlignment="Right" Margin="0,0,19,20" VerticalAlignment="Bottom" Width="75" Click="Back_Click"/>

    </Grid>
</Page>
