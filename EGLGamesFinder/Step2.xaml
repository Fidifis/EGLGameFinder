<Page x:Class="EGLGamesFinder.Step2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EGLGamesFinder"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Step2" Loaded="Page_Loaded">
    
    <Grid Background="White">
        <Grid Width="600" Height="200" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label x:Name="Message" Content="Waiting on report" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="22" Margin="0,40,0,0"/>
            <Label Content="Now restart Epic Games Launcher" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="22" Margin="0,0,0,40"/>

        </Grid>
        <Button Content="Exit" Margin="0,0,33,32" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Exit_Click"/>
        <Button Content="Add another" HorizontalAlignment="Right" Margin="0,0,113,32" VerticalAlignment="Bottom" Width="75" Click="Repeat_Click"/>
    </Grid>

</Page>
